    <script>
      // Toast 함수 정의
      function showToast(message, type = 'default') {
        const toastContainer = document.getElementById('toast-container');
        if (!toastContainer) return;
        
        const toast = document.createElement('div');
        toast.className = `max-w-sm w-full bg-white shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden transform transition-all duration-300 ease-in-out`;
        
        // 타입별 색상 설정
        const colorClasses = {
          success: 'bg-green-50 border-green-500 text-green-800',
          error: 'bg-red-50 border-red-500 text-red-800',
          warning: 'bg-yellow-50 border-yellow-500 text-yellow-800',
          default: 'bg-gray-50 border-gray-500 text-gray-800'
        };
        
        toast.innerHTML = `
          <div class="p-4 ${colorClasses[type] || colorClasses.default} border-l-4">
            <div class="flex items-center">
              <div class="flex-1">
                <p class="text-sm font-medium">${message}</p>
              </div>
              <button onclick="this.closest('.max-w-sm').remove()" class="ml-4 inline-flex text-gray-400 hover:text-gray-500">
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        `;
        
        toastContainer.appendChild(toast);
        
        // 3초 후 자동으로 제거
        setTimeout(() => {
          toast.remove();
        }, 3000);
      }
      
      // 모바일 메뉴 토글 - Turbo 호환성을 위한 수정
      function initializeMobileMenu() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuClose = document.getElementById('mobile-menu-close');
        const hamburgerIcon = document.getElementById('hamburger-icon');
        const closeIcon = document.getElementById('close-icon');
        
        if (!mobileMenuButton || !mobileMenu) {
          console.log('Mobile menu elements not found');
          return;
        }
        
        function openMobileMenu() {
          console.log('Opening mobile menu...');
          mobileMenu.classList.remove('hidden');
          mobileMenu.classList.add('flex');
          if (hamburgerIcon) hamburgerIcon.classList.add('hidden');
          if (hamburgerIcon) hamburgerIcon.classList.remove('block');
          if (closeIcon) closeIcon.classList.remove('hidden');
          if (closeIcon) closeIcon.classList.add('block');
          document.body.style.overflow = 'hidden'; // 스크롤 방지
        }
        
        function closeMobileMenu() {
          console.log('Closing mobile menu...');
          mobileMenu.classList.add('hidden');
          mobileMenu.classList.remove('flex');
          if (hamburgerIcon) hamburgerIcon.classList.remove('hidden');
          if (hamburgerIcon) hamburgerIcon.classList.add('block');
          if (closeIcon) closeIcon.classList.add('hidden');
          if (closeIcon) closeIcon.classList.remove('block');
          document.body.style.overflow = ''; // 스크롤 복원
        }
        
        // 기존 이벤트 리스너 제거 (중복 방지)
        mobileMenuButton.removeEventListener('click', window.mobileMenuToggle);
        
        // 새 이벤트 리스너 추가
        window.mobileMenuToggle = function(e) {
          e.preventDefault();
          e.stopPropagation();
          console.log('Mobile menu button clicked');
          
          const isHidden = mobileMenu.classList.contains('hidden');
          
          if (isHidden) {
            openMobileMenu();
          } else {
            closeMobileMenu();
          }
        };
        
        mobileMenuButton.addEventListener('click', window.mobileMenuToggle);
        
        // 모달 내부 닫기 버튼 클릭 이벤트
        if (mobileMenuClose) {
          mobileMenuClose.removeEventListener('click', window.mobileMenuCloseHandler);
          window.mobileMenuCloseHandler = function(e) {
            e.preventDefault();
            e.stopPropagation();
            closeMobileMenu();
          };
          mobileMenuClose.addEventListener('click', window.mobileMenuCloseHandler);
        }
        
        // 모달 배경 클릭 시 닫기
        mobileMenu.removeEventListener('click', window.mobileMenuBackgroundClick);
        window.mobileMenuBackgroundClick = function(e) {
          if (e.target === mobileMenu) {
            closeMobileMenu();
          }
        };
        mobileMenu.addEventListener('click', window.mobileMenuBackgroundClick);
        
        // 메뉴 항목 클릭 시 모달 닫기
        const menuLinks = mobileMenu.querySelectorAll('a');
        menuLinks.forEach(link => {
          link.addEventListener('click', function() {
            closeMobileMenu();
          });
        });
        
        // ESC 키로 모달 닫기 (전역 이벤트이므로 한 번만 등록)
        if (!window.mobileMenuEscapeHandler) {
          window.mobileMenuEscapeHandler = function(e) {
            if (e.key === 'Escape') {
              const mobileMenu = document.getElementById('mobile-menu');
              if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
                closeMobileMenu();
              }
            }
          };
          document.addEventListener('keydown', window.mobileMenuEscapeHandler);
        }
      }
      
      // DOMContentLoaded와 turbo:load 이벤트 모두에서 초기화
      document.addEventListener('DOMContentLoaded', initializeMobileMenu);
      document.addEventListener('turbo:load', initializeMobileMenu);
      
      // 페이지 이동 시 모달 닫기
      document.addEventListener('turbo:before-visit', function() {
        const mobileMenu = document.getElementById('mobile-menu');
        if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.add('hidden');
          mobileMenu.classList.remove('flex');
          document.body.style.overflow = '';
        }
      });
    </script>

