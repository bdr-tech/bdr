          }
        };
        mobileMenu.addEventListener('click', window.mobileMenuBackgroundClick);
        
        // ë©”ë‰´ í•­ëª© í´ë¦­ ì‹œ ëª¨ë‹¬ ë‹«ê¸°
        const menuLinks = mobileMenu.querySelectorAll('a');
        menuLinks.forEach(link => {
