<% content_for :title, "로그" %>

<!-- 페이지 제목 -->
<div class="mb-8">
  <h2 class="text-3xl font-bold text-gray-800 mb-2">📜 관리자 로그</h2>
  <p class="text-gray-600">관리자 활동 로그를 확인하고 모니터링하세요</p>
</div>

<!-- 필터 -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <%= form_with url: admin_logs_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
    <div class="flex-1 min-w-64">
      <%= form.text_field :search, placeholder: "액션, 리소스, 사용자 검색", 
                          value: params[:search], 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= form.select :action_filter, 
                      options_for_select([
                        ['전체 액션', ''],
                        *@actions.map { |action| [action, action] }
                      ], params[:action_filter]), 
                      {}, 
                      { class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>
    <div>
      <%= form.select :resource_type_filter, 
                      options_for_select([
                        ['전체 리소스', ''],
                        *@resource_types.map { |type| [type, type] }
                      ], params[:resource_type_filter]), 
                      {}, 
                      { class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>
    <div class="flex gap-2">
      <%= form.submit "필터", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition duration-300" %>
      <%= link_to "초기화", admin_logs_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition duration-300" %>
    </div>
  <% end %>
</div>

<!-- 로그 목록 -->
<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">시간</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">관리자</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">액션</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">리소스</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">상세</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IP</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @logs.each do |log| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <div class="font-medium">
                <%= log.created_at.strftime("%Y-%m-%d") %>
              </div>
              <div class="text-xs text-gray-500">
                <%= log.created_at.strftime("%H:%M:%S") %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-8 w-8">
                  <div class="h-8 w-8 rounded-full bg-purple-500 flex items-center justify-center text-white font-bold text-xs">
                    <%= log.user&.name&.first || 'U' %>
                  </div>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-900">
                    <%= log.user&.name || '알 수 없음' %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= log.user&.email || '이메일 없음' %>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case log.action %>
              <% when 'create' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  생성
                </span>
              <% when 'update' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  수정
                </span>
              <% when 'delete' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  삭제
                </span>
              <% when 'suspend' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  정지
                </span>
              <% when 'activate' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  활성화
                </span>
              <% when 'approve' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  승인
                </span>
              <% when 'reject' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  거절
                </span>
              <% when 'refund' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                  환불
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= log.action %>
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <div class="font-medium">
                <%= log.resource_type %>
              </div>
              <% if log.resource_id %>
                <div class="text-xs text-gray-500">
                  ID: <%= log.resource_id %>
                </div>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 max-w-xs">
              <% if log.details.present? %>
                <div class="truncate" title="<%= log.details %>">
                  <%= log.details %>
                </div>
              <% else %>
                <span class="text-gray-400">상세 정보 없음</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= log.ip_address || '알 수 없음' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- 빈 로그 안내 -->
<% if @logs.empty? %>
  <div class="bg-white rounded-lg shadow-md p-8 text-center">
    <div class="text-gray-500">
      <div class="text-4xl mb-4">📜</div>
      <p class="text-lg">조건에 맞는 로그가 없습니다.</p>
      <p class="text-sm text-gray-400 mt-2">관리자 활동이 있을 때 로그가 기록됩니다.</p>
    </div>
  </div>
<% else %>
  <!-- 페이지네이션 -->
  <div class="mt-6 flex justify-center">
    <%= paginate @logs %>
  </div>
<% end %>

<!-- 로그 통계 -->
<div class="mt-8 bg-white rounded-lg shadow-md p-6">
  <h3 class="text-lg font-semibold text-gray-800 mb-4">📊 로그 통계</h3>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-blue-50 p-4 rounded-lg">
      <div class="text-2xl font-bold text-blue-600"><%= @logs.count %></div>
      <div class="text-sm text-gray-600">총 로그 수</div>
    </div>
    <div class="bg-green-50 p-4 rounded-lg">
      <div class="text-2xl font-bold text-green-600"><%= @logs.where(created_at: Date.current.beginning_of_day..Date.current.end_of_day).count %></div>
      <div class="text-sm text-gray-600">오늘 활동</div>
    </div>
    <div class="bg-purple-50 p-4 rounded-lg">
      <div class="text-2xl font-bold text-purple-600"><%= @logs.select(:user_id).distinct.count %></div>
      <div class="text-sm text-gray-600">활동 관리자 수</div>
    </div>
  </div>
</div>