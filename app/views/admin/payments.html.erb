<% content_for :title, "결제 관리" %>

<!-- 페이지 제목 -->
<div class="mb-8">
  <h2 class="text-3xl font-bold text-gray-800 mb-2">💳 결제 관리</h2>
  <p class="text-gray-600">결제 내역을 관리하고 모니터링하세요</p>
</div>

<!-- 필터 및 검색 -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <%= form_with url: admin_payments_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
    <div class="flex-1 min-w-64">
      <%= form.text_field :search, placeholder: "결제ID, 사용자명, 경기명 검색", 
                          value: params[:search], 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= form.select :status, 
                      options_for_select([
                        ['전체 상태', ''],
                        ['결제 완료', 'paid'],
                        ['결제 대기', 'pending'],
                        ['결제 실패', 'failed'],
                        ['환불 완료', 'refunded'],
                        ['취소됨', 'cancelled']
                      ], params[:status]), 
                      {}, 
                      { class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>
    <div class="flex gap-2">
      <%= form.submit "검색", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition duration-300" %>
      <%= link_to "초기화", admin_payments_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition duration-300" %>
    </div>
  <% end %>
</div>

<!-- 결제 통계 카드 -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">총 결제 건수</p>
        <p class="text-2xl font-bold text-blue-600"><%= @payments.count %></p>
      </div>
      <div class="text-3xl">💳</div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">결제 완료</p>
        <p class="text-2xl font-bold text-green-600"><%= @payments.where(status: 'paid').count %></p>
      </div>
      <div class="text-3xl">✅</div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">결제 대기</p>
        <p class="text-2xl font-bold text-orange-600"><%= @payments.where(status: 'pending').count %></p>
      </div>
      <div class="text-3xl">⏳</div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">총 결제 금액</p>
        <p class="text-2xl font-bold text-purple-600">
          <%= number_to_currency(@payments.where(status: 'paid').sum(:amount), unit: '₩', precision: 0) %>
        </p>
      </div>
      <div class="text-3xl">💰</div>
    </div>
  </div>
</div>

<!-- 결제 목록 -->
<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">결제 정보</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">사용자</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">경기</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">금액</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">상태</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">결제일</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">관리</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @payments.each do |payment| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-purple-500 flex items-center justify-center text-white font-bold">
                    💳
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= payment.toss_payment_key || payment.toss_order_id || payment.transaction_id || "ID: #{payment.id}" %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= payment.payment_method || '카드' %>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= payment.user&.name || '알 수 없음' %>
              </div>
              <div class="text-sm text-gray-500">
                <%= payment.user&.email || '이메일 없음' %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= payment.game&.title || '경기 정보 없음' %>
              </div>
              <div class="text-sm text-gray-500">
                <%= payment.game&.game_id || '게임 ID 없음' %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= number_to_currency(payment.amount, unit: '₩', precision: 0) %>
              </div>
              <% if payment.fee_amount && payment.fee_amount > 0 %>
                <div class="text-xs text-gray-500">
                  수수료: <%= number_to_currency(payment.fee_amount, unit: '₩', precision: 0) %>
                </div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case payment.status %>
              <% when 'paid' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  결제 완료
                </span>
              <% when 'pending' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                  결제 대기
                </span>
              <% when 'failed' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  결제 실패
                </span>
              <% when 'refunded' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  환불 완료
                </span>
              <% when 'cancelled' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  취소됨
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= payment.status %>
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <div class="text-sm font-medium text-gray-900">
                <%= payment.created_at.strftime("%Y-%m-%d") %>
              </div>
              <div class="text-xs text-gray-500">
                <%= payment.created_at.strftime("%H:%M") %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <% if payment.status == 'paid' %>
                  <%= form_with url: admin_payment_action_path(payment), method: :post, local: true, class: "inline" do |f| %>
                    <%= f.hidden_field :action_type, value: 'refund' %>
                    <%= f.text_field :refund_reason, placeholder: "환불 사유", class: "px-2 py-1 text-xs border rounded", style: "width: 100px;" %>
                    <%= f.submit "환불", class: "bg-red-500 hover:bg-red-600 text-white px-2 py-1 rounded text-xs", 
                                 confirm: "정말로 환불하시겠습니까?" %>
                  <% end %>
                <% elsif payment.status == 'pending' %>
                  <%= form_with url: admin_payment_action_path(payment), method: :post, local: true, class: "inline" do |f| %>
                    <%= f.hidden_field :action_type, value: 'cancel' %>
                    <%= f.submit "취소", class: "bg-gray-500 hover:bg-gray-600 text-white px-2 py-1 rounded text-xs", 
                                 confirm: "이 결제를 취소하시겠습니까?" %>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @payments.empty? %>
  <div class="bg-white rounded-lg shadow-md p-8 text-center">
    <div class="text-gray-500">
      <div class="text-4xl mb-4">💳</div>
      <p class="text-lg">조건에 맞는 결제 내역이 없습니다.</p>
    </div>
  </div>
<% else %>
  <!-- 페이지네이션 -->
  <div class="mt-6 flex justify-center">
    <%= paginate @payments %>
  </div>
<% end %>