<% content_for :title, "#{@category} - BDR 커뮤니티" %>

<div class="min-h-screen bg-gray-50">
  <!-- 헤더 영역 -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-6xl mx-auto px-4">
      <div class="relative py-6">
        <!-- 뒤로가기 버튼 -->
        <div class="absolute left-0 top-1/2 transform -translate-y-1/2">
          <%= link_to community_path, class: "text-gray-600 hover:text-gray-800 transition duration-300 flex items-center" do %>
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            <span>뒤로</span>
          <% end %>
        </div>
        
        <!-- 중앙 제목 -->
        <div class="text-center">
          <h1 class="text-2xl font-bold text-gray-800 flex items-center justify-center">
            <%= Post.new(category: @category).category_icon %>
            <span class="ml-2"><%= @category %></span>
          </h1>
          <p class="text-gray-600 mt-1 text-sm"><%= Post::CATEGORIES[@category] %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-6">

    <!-- 상단 액션 버튼 영역 -->
    <% if logged_in? %>
      <div class="flex justify-end mb-4">
        <%= link_to new_post_path(category: @category), class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-2.5 rounded-lg transition duration-300 font-medium flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          글 작성하기
        <% end %>
      </div>
    <% end %>

    <!-- 검색 영역 -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
      <%= form_with url: request.path, method: :get, local: true, class: "space-y-4" do |form| %>
        <div class="flex flex-col md:flex-row gap-3">
          <div class="flex-1 relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <%= form.text_field :search, 
                  value: params[:search],
                  placeholder: "검색어를 입력하세요...",
                  class: "w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" %>
          </div>
          <div class="flex gap-2">
            <%= form.select :search_type, 
                  options_for_select([
                    ['제목', 'title'],
                    ['제목+내용', 'title_content'],
                    ['글쓴이', 'author']
                  ], params[:search_type] || 'title'),
                  {},
                  { class: "px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 bg-white" } %>
            <%= form.submit "검색", class: "bg-orange-500 hover:bg-orange-600 text-white px-6 py-2.5 rounded-lg transition duration-300 font-medium" %>
            <% if params[:search].present? %>
              <%= link_to "초기화", request.path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2.5 rounded-lg transition duration-300" %>
            <% end %>
          </div>
        </div>
        
        <% if params[:search].present? %>
          <div class="text-sm text-gray-600 bg-gray-50 px-4 py-2 rounded-lg">
            <span class="font-medium"><%= @posts.count %></span>개의 게시글이 검색되었습니다.
            (<%= params[:search_type] == 'author' ? '글쓴이' : params[:search_type] == 'title' ? '제목' : '제목+내용' %>: "<%= params[:search] %>")
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- 게시글 목록 -->
    <div class="space-y-4">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow duration-300">
            <%= link_to post_path(post), class: "block p-6" do %>
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <!-- 제목 -->
                  <h3 class="text-lg font-semibold text-gray-800 hover:text-orange-600 transition duration-300 mb-2">
                    <%= post.title %>
                    <% if post.comments_count > 0 %>
                      <span class="text-orange-500 text-sm ml-1 font-normal">[<%= post.comments_count %>]</span>
                    <% end %>
                  </h3>
                  
                  <!-- 메타 정보 -->
                  <div class="flex items-center flex-wrap gap-x-4 gap-y-1 text-sm text-gray-500">
                    <div class="flex items-center">
                      <span class="w-6 h-6 bg-gradient-to-r from-orange-400 to-red-500 rounded-full flex items-center justify-center text-white font-bold text-xs mr-2">
                        <%= post.user.nickname&.first || post.user.name&.first || 'U' %>
                      </span>
                      <span><%= post.user.nickname || post.user.name %></span>
                    </div>
                    <span class="text-gray-300">•</span>
                    <span><%= time_ago_in_words(post.created_at) %>전</span>
                    <span class="text-gray-300">•</span>
                    <span>조회 <%= post.views_count %></span>
                    <% if post.has_images? %>
                      <span class="text-gray-300">•</span>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                        </svg>
                        <span><%= post.image_count %></span>
                      </span>
                    <% end %>
                  </div>
                </div>
                
                <!-- 이미지 썸네일 -->
                <% if post.has_images? %>
                  <div class="ml-4 flex-shrink-0">
                    <div class="w-20 h-20 bg-gray-100 rounded-lg flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <!-- 게시글이 없을 때 -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-16">
          <div class="text-center">
            <div class="text-6xl mb-4"><%= Post.new(category: @category).category_icon %></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">아직 게시글이 없습니다</h3>
            <p class="text-gray-600 mb-6">첫 번째 게시글을 작성해보세요!</p>
            <% if logged_in? %>
              <%= link_to "첫 게시글 작성하기", new_post_path(category: @category), class: "inline-block bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg transition duration-300" %>
            <% else %>
              <%= link_to "로그인하여 글 작성하기", login_path, class: "inline-block bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg transition duration-300" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- 페이지네이션 (간단한 더보기 방식) -->
    <div class="mt-8 text-center">
      <% if @posts.count >= 20 %>
        <button class="bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 px-6 py-3 rounded-lg transition duration-300 font-medium" onclick="loadMorePosts()">
          더 보기
        </button>
      <% end %>
    </div>
  </div>

  <!-- Floating 글작성 버튼 -->
  <% if logged_in? %>
    <%= link_to new_post_path(category: @category), class: "fixed bottom-6 right-6 bg-orange-500 hover:bg-orange-600 text-white w-14 h-14 rounded-full shadow-lg flex items-center justify-center transition-all duration-300 hover:scale-110 z-50", title: "글 작성하기" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
    <% end %>
  <% end %>

  <script>
    function loadMorePosts() {
      // 향후 AJAX를 통한 무한 스크롤 구현 예정
      alert('더보기 기능은 곧 구현됩니다!');
    }
  </script>
</div>